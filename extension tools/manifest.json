{
  "name": "RingCentral RCV Automation Tools",

  "action": {
    "default_icon": "default_rcv_logo.png"//,
    // "default_popup": "rcv_team.html"
  },

  "manifest_version": 3,

  "version": "5.1",

  "description": "Инструменты для автоматизации * Вытягивание степов Test-It * Вытягивание номеров кейсов из JIRA тасок * Генерация тасок",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "rcv_automation_tools_script_test.js"
  },

  "content_scripts": [{
    "matches": ["https://jira.ringcentral.com/secure/CreateIssue*"],
    "js": ["extension_background.js"]
  }],

  "icons": {
    "32": "favicon_32x32.png",
    "128": "favicon_128x128.png"
  }
}